<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Billing_Activity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#5D70AA"
            android:padding="20dp">

            <TextView
                android:id="@+id/full_name"
                android:layout_width="194dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif"
                android:text="Billing Activity"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="Customer Name"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/customer_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:hint="Mobile Number"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/customer_name"
        tools:layout_editor_absoluteX="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/item1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="211dp"
        android:hint="Item-1"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/qty1"
        app:layout_constraintEnd_toEndOf="@+id/customer_mobile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/qty1">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="414dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/qty1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="121dp"
        android:hint="Qty"
        app:layout_constraintEnd_toEndOf="@+id/customer_mobile"
        app:layout_constraintStart_toEndOf="@+id/item1"
        app:layout_constraintTop_toBottomOf="@+id/customer_mobile">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="360dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/price1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:hint="Price"
        app:layout_constraintEnd_toEndOf="@+id/customer_mobile"
        app:layout_constraintStart_toEndOf="@+id/qty1"
        app:layout_constraintTop_toBottomOf="@+id/customer_mobile">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="360dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/item2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:hint="Item-2"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/item1"
        app:layout_constraintStart_toStartOf="@+id/item1"
        app:layout_constraintTop_toBottomOf="@+id/item1">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="561dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/qty2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        android:hint="Qty"
        app:layout_constraintBottom_toBottomOf="@+id/item2"
        app:layout_constraintEnd_toEndOf="@+id/qty1"
        app:layout_constraintStart_toEndOf="@+id/item2"
        app:layout_constraintTop_toBottomOf="@+id/qty1">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="540dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/price2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="1dp"
        android:hint="Price"
        app:layout_constraintBottom_toBottomOf="@+id/qty2"
        app:layout_constraintEnd_toEndOf="@+id/price1"
        app:layout_constraintStart_toEndOf="@+id/qty2"
        app:layout_constraintTop_toBottomOf="@+id/price1">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="257dp"
            tools:layout_editor_absoluteY="533dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/item3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="89dp"
        android:hint="Item-3"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/qty2"
        app:layout_constraintStart_toStartOf="@+id/item2"
        app:layout_constraintTop_toBottomOf="@+id/item2">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="488dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/qty3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:hint="Qty"
        app:layout_constraintBottom_toBottomOf="@+id/item3"
        app:layout_constraintEnd_toEndOf="@+id/qty2"
        app:layout_constraintStart_toEndOf="@+id/item3"
        app:layout_constraintTop_toBottomOf="@+id/qty2">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="203dp"
            tools:layout_editor_absoluteY="544dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/price3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:hint="Price"
        app:layout_constraintBottom_toBottomOf="@+id/qty3"
        app:layout_constraintEnd_toEndOf="@+id/price2"
        app:layout_constraintStart_toEndOf="@+id/qty3"
        app:layout_constraintTop_toBottomOf="@+id/price2">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="274dp"
            tools:layout_editor_absoluteY="540dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/item4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="19dp"
        android:hint="Item-4"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/item3"
        app:layout_constraintStart_toStartOf="@+id/item3"
        app:layout_constraintTop_toBottomOf="@+id/item3">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="475dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/qty4"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="1dp"
        android:hint="Qty"
        app:layout_constraintBottom_toBottomOf="@+id/item4"
        app:layout_constraintEnd_toEndOf="@+id/qty3"
        app:layout_constraintStart_toEndOf="@+id/item4"
        app:layout_constraintTop_toBottomOf="@+id/qty3">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="203dp"
            tools:layout_editor_absoluteY="597dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/price4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="19dp"
        android:hint="Price"
        app:layout_constraintBottom_toBottomOf="@+id/qty4"
        app:layout_constraintEnd_toEndOf="@+id/price3"
        app:layout_constraintStart_toEndOf="@+id/qty4"
        app:layout_constraintTop_toBottomOf="@+id/price3">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="601dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/item5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="23dp"
        android:hint="Item-5"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item4"
        app:layout_constraintTop_toBottomOf="@+id/item4"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="547dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/qty5"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="1dp"
        android:hint="Qty"
        app:layout_constraintBottom_toBottomOf="@+id/item5"
        app:layout_constraintEnd_toEndOf="@+id/qty4"
        app:layout_constraintStart_toEndOf="@+id/item5"
        app:layout_constraintTop_toBottomOf="@+id/qty4">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="658dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/price5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="23dp"
        android:hint="Price"
        app:layout_constraintBottom_toBottomOf="@+id/qty5"
        app:layout_constraintEnd_toEndOf="@+id/price4"
        app:layout_constraintStart_toEndOf="@+id/qty5"
        app:layout_constraintTop_toBottomOf="@+id/price4">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="255dp"
            tools:layout_editor_absoluteY="609dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/generate_pdf"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/button_bg"
        android:text="Generate PDF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/view_button"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="141dp"
        android:background="@drawable/button_bg"
        android:text="View pdf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/generate_pdf"
        app:layout_constraintTop_toBottomOf="@+id/generate_pdf"
        app:layout_constraintVertical_bias="0.281" />

    <Button
        android:id="@+id/share_button"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/button_bg"
        android:text="share pdf"
        app:layout_constraintStart_toStartOf="@+id/generate_pdf"
        app:layout_constraintTop_toBottomOf="@+id/generate_pdf" />

</androidx.constraintlayout.widget.ConstraintLayout>